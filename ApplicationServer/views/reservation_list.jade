extends usercenter_layout

block right_block

    .person-right
        .order-remind.g-clear
            .meta: h1 我的预约单
        .list
            table.table
                colgroup
                    col(width='144px;')
                    col(width='180px;')
                    col(width='100px;')
                    col.order-cost(width='130px;')
                    col(width='130px;')
                thead
                    tr
                        th 就诊日期
                        th 医院
                        th.text-left 医生
                        th 挂号费
                        th 订单状态
                        th 操作
                tbody
                    if(reservations.length)
                        each item in reservations
                            tr
                                td #{item.time}
                                td #{item.hospital_name}
                                td #{item.doctor_name}
                                td #{item.price}
                                td #{item.status}
                                td: a(href='/reservation/#{item.reservation_id}') 查看
                tbody
