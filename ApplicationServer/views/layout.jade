doctype html
html(lang="zh-cn")
    head
        meta(charset="utf-8")
        meta(name="robots", content="none")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        script(src="/javascripts/jquery-2.1.1.min.js")
        link(href="/stylesheets/bootstrap/css/bootstrap.min.css", rel="stylesheet", media="all")
        script(src="/stylesheets/bootstrap/js/bootstrap.min.js")
        link(href="/stylesheets/font-awesome-4.2.0/css/font-awesome.min.css", rel="stylesheet", media="all")
        link(href="/stylesheets/general.css", rel="stylesheet", media="all")
        block title
            
    body
        div#nav
            nav.navbar.navbar-default(role="navigation")
                div.container
                    div.navbar-header
                        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="/") SRF
                    .navbar-form.navbar-left
                        .input-group
                            input#nav-search-field.form-control(placeholder="搜索医院")
                            span.input-group-btn
                                button#nav-search-button.btn.btn-default 搜索

                    div#navbar-collapse.collapse.navbar-collapse
                        if username
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href="#") #{username}
                                li
                                    a(href="/account/manage/info") 个人中心
                                li
                                    a(href="/account/manage/reservation") 预约单
                                li
                                    a(href="/account/logout") 退出
                        else
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href="/account/login") 登陆
                                li
                                    a(href="/account/register") 注册


        div#header
            div#header-content
                div.container
                    ol.breadcrumb
                        block breadcrumb
                    block header-content-extra

    block site-content

    div#footer
        p#copyright.text-center © 2014 SRF 版权所有

    script.
        $(document).ready(function () {
            $("#nav-search-button").click(function () {
                var href = "/search/" + $("#nav-search-field").val();
                window.location.href = href;
            });
        });